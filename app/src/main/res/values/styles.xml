<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Text styles -->
    <style name="myLoginEditText" >
        <item name="fontPath">fonts/robotoregular.ttf</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginLeft">@dimen/log_edit_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/log_edit_marginRight</item>
        <item name="android:layout_marginTop">@dimen/log_edit_marginTop</item>
    </style>

    <style name="mySettingsItem">
        <item name="android:paddingTop">@dimen/settings_pad_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_pad_vertical</item>
        <item name="android:paddingLeft">@dimen/settings_pad_horizontal</item>
        <item name="android:paddingRight">@dimen/settings_pad_horizontal</item>
    </style>

    <style name="mySettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="mySettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="fontPath">fonts/robotobold.ttf</item>
    </style>

    <style name="myDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="myText20Base">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myText20White" parent="myText20Base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myText20WhiteTitle" parent="myText20White">
        <item name="android:layout_marginLeft">@dimen/btn_padding</item>
    </style>

    <style name="myText16Base">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myText16Black" parent="myText16Base">
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="myText16BlueBold" parent="myText16Base">
        <item name="android:textColor">@color/blue_text</item>
        <item name="fontPath">fonts/robotobold.ttf</item>
    </style>

    <style name="myText14Black">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <!-- Layout styles -->
    <style name="mySettingsRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:paddingLeft">@dimen/settings_pad_horizontal</item>
        <item name="android:paddingRight">@dimen/settings_pad_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
        

</resources>
